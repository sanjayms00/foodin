    <%- include('./includes/header') %>
    <div class="container-fluid p-0 login-mobile">
        <div class="row">
            <div class="col-md-12">
                <div id="back">
                    <div class="backRight"></div>
                    <div class="backLeft"></div>
                </div>
            
                <div id="slideBox">
                    <div class="topLayer">
                        <div class="left">
                            <div class="content">
                                <h2>OTP Login</h2>
                                <form class="login_form" method="post" id="mobileNumberValidateForm" onsubmit="return validateMobileNumber()">
                                    <div class="mb-3">
                                        <label for="mobileNumber" id="mobileNumberLabel" class="form-label">Enter mobile number used to create account</label>
                                        <input type="text" class="form-control" id="mobileNumber" name="mobileNumber" placeholder="Mobile Number">				
                                    </div>
                                    <button class="w-100" type="submit">Send otp</button>
                                  </form>
                                <button id="goLeft" class="mt-0 w-100">Login >>></button>
                            </div>
                        </div>
                        <div class="right">
                            <div class="content">
                                <h2>Login</h2>
                                <form class="login_form"  id="loginForm">
                                    <div>
                                        <label for="Email" id="emailLabel" class="form-label">Email Id</label>
                                        <input type="email" class="form-control mt-0" id="emailId" name="emailId" placeholder="Email Id">				
                                    </div>
                                    <br>
                                    <div>
                                        <label for="password" id="passwordLabel" class="form-label">Password</label>
                                        <input type="password" class="form-control mt-0" id="loginPassword" name="loginPassword" placeholder="Password">				
                                    </div>
                                    <button id="login" class="w-100" type="submit">Login</button>
                                </form>
                                <button id="goRight" class="w-100 mt-0" class="off"> <<< MOBILE LOGIN </button>
                                <div class="d-flex align-items-center justify-content-center">
                                    <a class="text-primary fw-bold" href="/forgot-password">Forgot Password ?</a>
                                    <a class="text-primary fw-bold ms-2" href="/signup">Create an account</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="assets/js/validate.js"></script>
    <%- include('./includes/footer') %>